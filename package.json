{
  "name": "calculadora-financiamento",
  "version": "1.0.0",
  "description": "Calculadora de financiamento com prestações fixas (Sistema Price)",
  "main": "src/index.html",
  "type": "module",
  "scripts": {
    "start": "npx http-server src -p 3000 -c-1",
    "dev": "npx http-server src -p 3000 -c-1",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "cypress": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "start-server-and-test dev http://localhost:3000 cypress:run",
    "test:e2e:open": "start-server-and-test dev http://localhost:3000 cypress",
    "lint": "eslint src/**/*.js testes/**/*.js",
    "lint:fix": "eslint src/**/*.js testes/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\" \"testes/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html}\" \"testes/**/*.js\""
  },
  "keywords": [
    "calculadora",
    "financiamento",
    "juros",
    "tabela-price",
    "sistema-price"
  ],
  "author": "dwildt",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@jest/globals": "^29.7.0",
    "babel-jest": "^29.7.0",
    "cypress": "^13.6.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-jest": "^27.6.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1",
    "start-server-and-test": "^2.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dwildt/juros.git"
  },
  "bugs": {
    "url": "https://github.com/dwildt/juros/issues"
  },
  "homepage": "https://dwildt.github.io/juros/"
}
